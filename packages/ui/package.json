{
  "name": "@drill4j/vee-ui",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://drill4j.github.io/vee-table",
  "author": "github.com/RomanDavlyatshin",
  "license": "Apache-2.0",
  "dependencies": {
    "@drill4j/vee-ledger": "^0.0.0",
    "dayjs": "^1.10.7",
    "formik": "^2.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-select": "^5.1.0",
    "react-table": "^7.7.0",
    "styled-components": "^5.3.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "lint:fix": "eslint src --ext tsx --fix",
    "lint": "eslint src --ext tsx"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-table": "^7.7.7",
    "@types/styled-components": "^5.1.15",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-drill4j": "^1.0.0",
    "eslint-plugin-jest": "^25.3.4",
    "gh-pages": "^3.2.3"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "drill4j"
    ],
    "rules": {
      "drill4j/license-header": [
        "error"
      ],
      "import/prefer-default-export": 0,
      "import/extensions": 0,
      "indent": "off",
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "eofline": 0,
      "arrow-parens": 0,
      "ordered-imports": 0,
      "object-literal-sort-keys": 0,
      "no-empty": 2,
      "no-unused-expression": 0,
      "linebreak-style": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "max-len": 0,
      "@typescript-eslint/no-use-before-define": 0,
      "@typescript-eslint/no-empty-function": 0,
      "import/no-anonymous-default-export": 0,
      "no-unused-expressions": 0,
      "operator-linebreak": 0,
      "implicit-arrow-linebreak": 0,
      "no-implicit-dependencies": 0,
      "no-use-before-define": 0,
      "class-methods-use-this": 0,
      "no-restricted-syntax": 0,
      "no-await-in-loop": 0,
      "no-continue": 0,
      "no-underscore-dangle": 0,
      "no-console": 0
    }
  }
}
