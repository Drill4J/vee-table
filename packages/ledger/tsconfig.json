{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "src",
    "lib": ["es2016", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__", "**/*.spec.ts"]
}
